<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context="com.example.addressbook.Test_Activity1"
    android:id="@+id/ll_activity_detail">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1000"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_cancel"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
       android:textColor="#000"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:text="返回"
            android:textSize="15sp" />
        <!-- 取消button自带阴影效果-->

        <Button

            android:id="@+id/btn_modify"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"

            android:text="修改"
            android:textColor="#000"
            android:textSize="15sp" />
        <!-- 取消button自带阴影效果-->

    </RelativeLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="#5000"/>

    <LinearLayout
        android:id="@+id/rl_pic_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"

        android:orientation="horizontal">


        <ImageButton
            android:id="@+id/ib_add_pic"
            android:layout_width="161dp"
            android:layout_height="120dp"
            android:layout_gravity="right|bottom"
            android:layout_margin="10dp"
            android:background="#D4D4D4"
            android:scaleType="fitXY"
            android:layout_weight="1"/>

        <LinearLayout
            android:id="@+id/ll_name"
            android:layout_width="237dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/tv_name1"
                style="@style/AttrName"
                android:text="令狐冲"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="17sp"
                />



            <TextView
                android:id="@+id/tv_name2"
                style="@style/AttrName"
                android:layout_weight="1"
                android:text="手机 : 123-9456-0789"
                android:textSize="17sp"/>



        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_phone"
        style="@style/LinearItem"
        android:orientation="horizontal"


        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="30dp"
                android:src="@drawable/phone1" />

            <Button
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"

                android:paddingLeft="10dp"
                android:text="通话"
                android:textColor="#000"
                android:textAlignment="2"

                android:textSize="15sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/sms" />

            <Button
                android:id="@+id/btn_sms"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:paddingLeft="10dp"
                android:text="短信"
                android:textAlignment="2"
                android:textColor="#000"
                android:textSize="15sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_email"
        style="@style/LinearItem">

        <TextView
            android:id="@+id/tv_email"
            style="@style/AttrName"
            android:text="邮箱：" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="#5000"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:layout_marginTop="40dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_love"
        style="@style/LinearItem">

        <TextView
            android:id="@+id/tv_love"
            style="@style/AttrName"
            android:text="关系亲密度：" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="#5000"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:layout_marginTop="40dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_address"
        style="@style/LinearItem">

        <TextView
            android:id="@+id/tv_address"
            style="@style/AttrName"
            android:text="通讯地址：" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="#5000"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:layout_marginTop="40dp"/>
    </LinearLayout>


    <LinearLayout style="@style/LinearItem">

        <Button
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
android:id="@+id/btn_delete"
            android:text="删除联系人"

            android:textColor="#c00"
            android:textSize="15sp" />

    </LinearLayout>


</LinearLayout>